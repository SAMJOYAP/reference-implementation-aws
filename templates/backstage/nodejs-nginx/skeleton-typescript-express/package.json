{
  "name": "${{ values.name }}",
  "version": "0.1.0",
  "private": true,
  "description": "TypeScript web project served by nginx with optional Express API",
  "engines": {
    "node": ">=${{ values.nodeVersion }}"
  },
  "type": "module",
  "scripts": {
    "lint": "node ./scripts/lint.mjs",
    "test": "node --test",
    "typecheck": "tsc --noEmit",
    "build": "tsc -p tsconfig.json && node ./scripts/build.mjs",
    "start": "node ./scripts/serve-info.mjs",
    "start:api": "tsx server/index.ts"
  },
  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/node": "^24.3.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}
