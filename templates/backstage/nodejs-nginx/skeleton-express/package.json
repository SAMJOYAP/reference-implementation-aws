{
  "name": "${{ values.name }}",
  "version": "0.1.0",
  "private": true,
  "description": "Node.js web project served by nginx with optional Express API",
  "engines": {
    "node": ">=${{ values.nodeVersion }}"
  },
  "type": "module",
  "scripts": {
    "lint": "node ./scripts/lint.mjs",
    "test": "node --test",
    "build": "node ./scripts/build.mjs",
    "start": "node ./scripts/serve-info.mjs",
    "start:api": "node ./server/index.mjs"
  },
  "dependencies": {
    "express": "^4.21.2"
  }
}
